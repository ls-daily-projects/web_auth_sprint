{
    "name": "rest-api",
    "version": "0.1.0",
    "description": "Web Auth Sprint",
    "main": "build",
    "scripts": {
        "clean:build": "rm -rf build",
        "build:babel": "babel src -d build",
        "build": "yarn clean:build && yarn build:babel",
        "start": "NODE_ENV=production yarn build && node -r dotenv/config .",
        "watch:babel": "babel -w src -d build",
        "watch:nodemon": "nodemon -r dotenv/config .",
        "watch": "NODE_ENV=development yarn build && yarn watch:nodemon & yarn watch:babel",
        "knex": "babel-node node_modules/.bin/knex",
        "knex:rollback:all": "yarn knex migrate:rollback --all --knexfile ./src/knexfile.js",
        "knex:migrate:make:users": "yarn knex migrate:make users --knexfile ./src/knexfile.js",
        "knex:migrate:make:jokes": "yarn knex migrate:make jokes --knexfile ./src/knexfile.js",
        "knex:migrate:latest": "yarn knex migrate:latest --knexfile ./src/knexfile.js",
        "knex:seed:make:users": "yarn knex seed:make users --knexfile ./src/knexfile.js",
        "knex:seed:make:jokes": "yarn knex seed:make jokes --knexfile ./src/knexfile.js",
        "knex:seed:run": "yarn knex seed:run --knexfile ./src/knexfile.js",
        "test": "rm -rf ./src/data/test_jokes.sqlite3 && jest"
    },
    "author": "Mikis Woodwinter",
    "dependencies": {
        "@babel/runtime": "^7.4.4",
        "bcrypt": "^5.0.0",
        "body-parser": "^1.18.3",
        "cors": "^2.8.5",
        "dotenv": "^6.2.0",
        "express": "^4.16.4",
        "helmet": "^3.20.0",
        "http-errors": "^1.7.2",
        "jsonwebtoken": "^8.5.1",
        "knex": "^0.18.3",
        "morgan": "^1.9.1",
        "sqlite3": "^4.0.9"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.3.3",
        "@babel/node": "^7.5.0",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-transform-runtime": "^7.4.4",
        "@babel/preset-env": "^7.3.1",
        "faker": "^4.1.0",
        "jest": "^24.8.0",
        "jest-cli": "^24.8.0",
        "knex-cleaner": "^1.2.1",
        "nodemon": "^1.18.10",
        "supertest": "^4.0.2"
    }
}
